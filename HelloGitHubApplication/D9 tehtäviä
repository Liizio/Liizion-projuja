        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="209" Margin="206,354,0,0" TextWrapping="Wrap" Text="Klikkaa keksi채!" VerticalAlignment="Top" Width="297"/>
        <Button x:Name="button" Content="Osta mummo" HorizontalAlignment="Left" Height="62" Margin="419,44,0,0" VerticalAlignment="Top" Width="169" Click="button_Click_1"/>
